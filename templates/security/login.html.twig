{% extends 'base.html.twig' %}

{% block title %}Se connecter à la boutique{% endblock %}

{% block content %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>

        <label for="username">Identifiant (votre email)</label>
        <input type="email" 
               value="{{ last_username }}" 
               name="_username" 
               id="username" 
               class="form-control" 
               placeholder="Votre identifiant ici"
               autocomplete="email" 
               required 
               autofocus>

        <label for="password" class="mt-3">Mot de passe</label>
        <input type="password" 
               name="_password" 
               id="password" 
               class="form-control" 
               placeholder="Votre mot de passe ici"
               autocomplete="current-password" 
               required>

        {# Redirection après connexion réussie vers /compte #}
        <input type="hidden" name="_target_path" value="/compte">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary mt-3" type="submit">
            Se connecter...
        </button>
    </form>
{% endblock %}
