<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Boutique e-commerce écrit en Symfony">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.118.2">
    <title>{% block title %}Boutique e-commerce{% endblock %}</title>

    <script src="{{ asset('assets/js/color-modes.js') }}"></script>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/maboutique.css') }}" rel="stylesheet">

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="{{ asset('assets/img/favicons/apple-touch-icon.png') }}" sizes="180x180">
    <link rel="icon" href="{{ asset('assets/img/favicons/favicon-32x32.png') }}" sizes="32x32" type="image/png">
    <link rel="icon" href="{{ asset('assets/img/favicons/favicon-16x16.png') }}" sizes="16x16" type="image/png">
    <link rel="mask-icon" href="{{ asset('assets/img/favicons/safari-pinned-tab.svg') }}" color="#712cf9">
    <link rel="icon" href="{{ asset('assets/img/favicons/favicon.ico') }}">
    <meta name="theme-color" content="#712cf9">

    <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
</head>
<body>

<header data-bs-theme="dark">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">Ma boutique</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">

                {# MENU PRINCIPAL #}
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item active">
                        <a class="nav-link active" href="#">Nos produits</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link active" href="#">Qui sommes-nous ?</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link active" href="#">Contact</a>
                    </li>
                </ul>

                {# MENU UTILISATEUR #}
                <div class="navbar-item-custom">
                    {% if app.user %}
                        <a href="{{ path('app_account') }}">Mon compte <small>({{app.user.firstname}})</small></a> |
                        <a href="{{ path('app_logout') }}">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Connexion</a> |
                        <a href="{{ path('app_inscription') }}">Inscription</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>
</header>

<main>
    {% if block('carousel') is defined %}
        <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel"></div>
    {% endif %}

    <div class="container marketing{% if block('carousel') is not defined %} mt-5{% endif %}">
        {% block content %}{% endblock %}
    </div>

    <!-- FOOTER CORRIGÉ -->
    <footer class="footer-custom">
        <p>
            &copy; 2017–2024 Ma Boutique<br />
            <small>Ma Boutique préférée<br />
                <a href="#">Privacy</a> &middot; <a href="#">Terms</a>
            </small>
        </p>
    </footer>

</main>

<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>

</body>
</html>
